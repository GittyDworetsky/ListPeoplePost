
@using ListPeoplePost.Data 
@model IndexViewModel

@if (!String.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @Model.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div b-ud2x8zyu5z class="container">
    <main b-ud2x8zyu5z role="main" class="pb-3">
        <div class="row">
            <div class="col-md-12">
                <a href="/home/addView" class="btn btn-success">Add People</a>
                <table class="table table-hover table-bordered">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Age</th>
                    </tr>
                    @foreach(Person p in Model.People)
                    {
                        <tr>
                            <td>@p.FirstName</td>
                            <td>@p.LastName</td>
                            <td>@p.Age</td>
                        </tr>
                    }
                  
                </table>
            </div>
        </div>

    </main>
</div>